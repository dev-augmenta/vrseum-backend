		"name": {
			"type": "string",
			"required": true
		},
		"description": {
			"type": "string"
		},
		"ownerId": {
			"type": "object",
			"required": true
		},
		"isOpen": {
			"type": "boolean",
			"required": true
		},
		"thumbnail" : {
