		},
		{
			"principalType": "ROLE",
			"principalId": "$owner",
			"permission": "ALLOW",
			"property": "updateById"
		},
		{
			"principalType": "ROLE",
			"principalId": "$owner",
			"permission": "ALLOW",
			"property": "deleteById"
		},
		{
			"principalType": "ROLE",
			"principalId": "$authenticated",
